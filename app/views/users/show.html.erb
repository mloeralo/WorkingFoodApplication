    <body>

        <section class="introduction">
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-4">Welcome to your fridge!</h1>
                    
                </div>
                <div class="container">
                <div class="row">
            
                <div id="fridgeTitle" class="col-sm-6">
                <h2>Fridge</h2>
                </div>
                
                
                <div id="recipesTitle" class="col-sm-6">
                <h2>  Recipes</h2>
                </div>
                
                <br><br>
                
                
<div class="col-sm-6" >
   


<ul class="list-group">
     <% @ingredients.each do |ingredient| %>
     <li class="list-group-item " ><%= ingredient.ing_name%><span class="glyphicon glyphicon-remove  pull-right " style="color:maroon "></span></li>
     <% end %>
 </ul>
                
<br>
</div>
<div class="col-sm-6" >
   


<ul class="list-group scroll">
    <% @recipes.each do |course| %>
     <li class="list-group-item " ><%= link_to(image_tag(course["image_url"], height: '100', width: '100'), course["f2f_url"])%> </span>
     <%= link_to(course["title"], course["f2f_url"]) %></span></li>
     <% end %>
 </ul>
                
<br>
</div>


               
                
                 
    </div>
              </div>

            </div>
        </section>
    
       
       
      
        
