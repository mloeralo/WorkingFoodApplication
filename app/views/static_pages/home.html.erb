    <body>

        <section class="introduction">
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-4">Welcome to Smart Recipes!</h1>
                    <h3 class="lead">This app holds all of your information needs about what recipes you can make and a place to store favorite recipes for quick and easy access!</h3>
                </div>
            </div>
        </section>
        <section class="information">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Login</h5>
                                <p class="card-text">Got an account already! Go ahead and login here!</p>
                                <p class="btn btn-primary"><%= link_to "Log In ",   '/sessions/new' %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Sign Up</h5>
                                <p class="card-text">'Do not have an account? No problem! Sign up here for your new best place for recipes and cooking!'</p>
                                <p class="btn btn-primary"><%= link_to "Sign Up ",  '/users/new' %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Questions</h5>
                                <p class="card-text">Have questions? Visit our FAQ section for all of the frequently asked questions.</p>
                                <a href="#" class="btn btn-primary">Visit FAQ</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="carousel-section">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12-md">
<!--                        <h3>Testimonials</h3>-->
